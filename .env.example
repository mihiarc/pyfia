# Example environment configuration for pyFIA
# Copy to .env and customize for your environment

# Database settings
PYFIA_DATABASE_PATH=fia.duckdb
PYFIA_DATABASE_ENGINE=duckdb

# API settings (optional)
# PYFIA_OPENAI_API_KEY=your-api-key-here
# PYFIA_OPENAI_MODEL=gpt-4o

# Performance settings
PYFIA_MAX_THREADS=4
PYFIA_CHUNK_SIZE=10000

# Cache settings
PYFIA_CACHE_ENABLED=true
# PYFIA_CACHE_DIR=/custom/cache/path

# Logging settings
PYFIA_LOG_LEVEL=INFO
# PYFIA_LOG_DIR=/custom/log/path

# CLI settings
PYFIA_CLI_PAGE_SIZE=20
PYFIA_CLI_MAX_WIDTH=120

# Type checking
PYFIA_TYPE_CHECK_ON_LOAD=false